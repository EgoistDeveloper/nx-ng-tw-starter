{
  "functions": {
    "predeploy": "npm --prefix functions run get-api-dist"
  },
  "hosting": {
    "headers": [
      {
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://nx-ng-starter.firebaseapp.com https://nx-ng-starter.web.app"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET,PUT,POST,DELETE,OPTIONS,HEAD"
          }
        ],
        "source": "**"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ],
        "source": "**/*.@(jpg|jpeg|gif|png|svg)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, no-cache, no-store, must-ravalidate, max-age=0"
          },
          {
            "key": "Expires",
            "value": "-1"
          },
          {
            "key": "Pragma",
            "value": "no-cache"
          }
        ],
        "source": "/(nx-ng-starter|coverage|documentation|cypress|api)"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "**/src/**"],
    "public": "dist/apps/nx-ng-starter",
    "rewrites": [
      {
        "function": "ping",
        "source": "/api/ping"
      },
      {
        "function": "login",
        "source": "/api/login"
      },
      {
        "function": "logout",
        "source": "/api/logout"
      },
      {
        "function": "signup",
        "source": "/api/signup"
      },
      {
        "function": "graphql",
        "source": "/api/graphql"
      },
      {
        "function": "grpc",
        "source": "/api/grpc"
      },
      {
        "destination": "/index.html",
        "source": "/client"
      },
      {
        "destination": "/coverage/client/index.html",
        "source": "/coverage"
      },
      {
        "destination": "/documentation/client/index.html",
        "source": "/documentation"
      },
      {
        "destination": "/cypress/client-e2e/mochawesome/mochawesome.html",
        "source": "/cypress"
      },
      {
        "destination": "/index.html",
        "source": "**/!(*.*|api|coverage|documentation|cypress|client)"
      }
    ]
  }
}
